{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": false,
    "sourceMap": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "outDir": "../dist-electron",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["horalix-main.ts", "horalix-preload.ts", "../src/main/**/*.ts", "../src/preload/**/*.ts"],
  "exclude": ["node_modules"]
}
